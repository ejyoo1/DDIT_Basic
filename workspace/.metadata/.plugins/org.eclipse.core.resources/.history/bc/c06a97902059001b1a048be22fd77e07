package ch7;


public class ImportTest {
	public static void main(String[] args){
		
	}
}

class Product{
	int price;
	int bonusPoint;
	
	Product(int price){
		this.price = price;
		int bonusPoint = (int)(price);
	}
}

class Tv extends Product{
	Tv(){
		super(100);
	}
	
	public String toString(){
		return "Tv";
	}
}

class Computer extends Product{
	Computer(){
		super(200);
	}
	
	public String toString(){
		return "Computer";
	}
}

class Buyer{
	int money = 1000;
	int bonusPoint = 0;
	
	void buy(Product p){
		if(money<p.price){
			System.out.println("금액이 부족합니다");
			return;
		}
		
		money -= p.price;
		bonusPoint += p.bonusPoint;
	}
}